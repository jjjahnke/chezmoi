# ~/.local/share/chezmoi/dot_aws/private_credentials.tmpl
# This template securely populates the AWS credentials file by iterating
# through the profiles defined in .chezmoidata.toml.

{{ range .data.aws.profiles -}}
{{- if .vaultSecretPath -}}
{{- $secret := vault .vaultSecretPath }}
{{- if eq .name "default" }}
[default]
{{- else }}
[profile {{ .name }}]
{{- end }}
aws_access_key_id = {{ $secret.data.data.AccessKeyID }}
aws_secret_access_key = {{ $secret.data.data.SecretAccessKey }}

{{ end -}}
{{- end }}
